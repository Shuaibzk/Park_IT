<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clientHomeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/clientHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/logoOwner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:src="@drawable/parkit_logo"
            android:contentDescription="ParkIt Logo"
            android:adjustViewBounds="true" />


        <TextView
            android:id="@+id/welcomeClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/bookParkingLotBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:rotationX="0"
            android:text="Book Parking Lot" />

        <Button
            android:id="@+id/myBookingsBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="My Bookings"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/paymentHistoryBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Payment History"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Profile" />

        <Button
            android:id="@+id/generalReportBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="General Report"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/reportOwnerBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Report Lot Owner"
            android:backgroundTint="@color/design_default_color_error"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>