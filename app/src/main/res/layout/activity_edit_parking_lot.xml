<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Parking Lot"
            android:textSize="24sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Parking Lot Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Lot Number"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editLotNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter parking lot number"
            android:layout_marginBottom="16dp"/>

        <!-- Latitude -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editLatitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter latitude"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Longitude -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editLongitudeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter longitude"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Price Per Hour -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per Hour"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter price per hour"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <!-- Total Spaces -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spaces"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editSpacesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter total spaces"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editDescriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:inputType="text"
            android:layout_marginBottom="24dp"/>

        <!-- Buttons Update and Go Back -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/updateLotBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/goBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>