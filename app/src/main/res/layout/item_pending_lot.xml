<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pendingLotCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="6dp"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Numbering -->
        <TextView
            android:id="@+id/requestNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request #1"
            android:textSize="25sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Owner Info -->
        <TextView
            android:id="@+id/ownerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner: John Doe (ID: abc123)"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Parking Lot Info -->
        <TextView
            android:id="@+id/lotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Lot: A1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/lotInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location, price, spaces info"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/approveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve" />

            <Button
                android:id="@+id/disapproveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disapprove"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>